# Fivetran MCP Server Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# FIVETRAN API CREDENTIALS (Required)
# =============================================================================
# Get these from Fivetran Dashboard > Your Username > API Key
FIVETRAN_API_KEY=your-api-key-here
FIVETRAN_API_SECRET=your-api-secret-here

# =============================================================================
# MCP SERVER SETTINGS (Optional - defaults shown)
# =============================================================================
MCP_HOST=localhost
MCP_PORT=8080
MCP_TRANSPORT_PROTOCOL=http

# =============================================================================
# AUTHENTICATION (Optional)
# =============================================================================
# Set to false for local development
ENABLE_AUTH=false

# =============================================================================
# LOGGING (Optional)
# =============================================================================
PYTHON_LOG_LEVEL=INFO
